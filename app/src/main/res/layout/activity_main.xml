<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_top"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            style="@style/Header"
            android:text="Bluetooth Devices"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        >
        <LinearLayout
            android:id="@+id/ll_setup"
            android:orientation="horizontal"
            style="@style/LinearLayoutHorizRvs"
            >
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_discovered"
                style="@style/LinearLayoutDiscoverContainer"
                >
                <TextView
                    style="@style/Header"
                    android:text="Discovered"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_discovered"
                    style="@style/RecyclerViewStyle"
                    >
                </android.support.v7.widget.RecyclerView>

                <Button
                    style="@style/ButtonStyle"
                    android:text="Refresh Discovered"
                    android:onClick="clickRefreshDiscovered"
                    />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_paired"
                style="@style/LinearLayoutDiscoverContainer"
                >
                <TextView
                    style="@style/Header"
                    android:text="Paired"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_paired"
                    style="@style/RecyclerViewStyle"
                    >
                </android.support.v7.widget.RecyclerView>
                <Button
                    style="@style/ButtonStyle"
                    android:text="Refresh Paired"
                    android:onClick="clickRefreshPaired"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            style="@style/TextInfo"
            android:text="Click on an entry in either list to initiate a connection."
        />
    </FrameLayout>
</LinearLayout>
